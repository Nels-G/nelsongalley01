---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/portfolio/Experience.astro";
import HeroIndex from "../components/portfolio/HeroIndex.astro";
import Contact from "../components/portfolio/Contact.astro";
import ListProjects from "../components/portfolio/ListProjects.astro";

const pageTitle = "Nelson Galley | Développeur & Designer";
const description = "Bienvenue sur le portfolio de Nelson Galley, développeur web & mobile, designer UI/UX et créateur de solutions numériques innovantes.";
const ogimage = {
  url: "/images/nelson-profile.webp", // change ce nom si tu utilises un autre fichier d'image
  alt: "Capture d’écran du portfolio de Nelson Galley, développeur et designer passionné. Présente ses projets, compétences techniques, expériences et contacts.",
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <HeroIndex />
  <Experience />
  <ListProjects />
  <Contact />
</Layout>
